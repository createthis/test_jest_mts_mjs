// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["jest"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["tests/**/*.mts", "src/**/*.mjs"],
  "exclude": ["node_modules"]
}
